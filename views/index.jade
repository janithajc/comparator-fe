extends layout

block content
    script(src='/javascripts/materialize.js')
    script(src='/javascripts/init.js')


    mixin filePicker(nm,placeholder)
        .col.s12.m6
            .file-field.input-field
                .btn
                    span Load
                    i.material-icons.right publish
                    input(type='file', name=nm, id=nm)
                .file-path-wrapper
                    input(placeholder=placeholder).file-path.validate

    .container
        h2.center.teal-text Step 1: Select Files to Compare
        .section
            .row
                form(ref='uploadForm', id='uploadForm', action='/upload?step=1', method='post', enctype='multipart/form-data')
                    .row
                        .input-field.col.s12
                            input(id='scenario', name='scenario', type='text', placeholder='Scenario', value=scenario)
                            label(for='scenario') Scenario
                    .row
                        +filePicker('left','Select the left file .csv')
                        +filePicker('right','Select the right file .csv')
                    .row
                        .col.s12
                            button(type='submit').btn.waves-effect.right Next
                                i.material-icons.right navigate_next
            .row
                include ./console